    <div id="desc">

    </div>
    <script>
        function nacionalidade(){
        var nacio = window.document.querySelector('input#BR')
        var desc = window.document.querySelector('div#desc')

        if (nacio == 'Brasil'){
            document.write('Você é brasileiro!')
        }
        else {
            document.write('Você é estrangeiro!')
        }
        }
    </script>
    
